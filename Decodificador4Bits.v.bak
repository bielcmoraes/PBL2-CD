//Decodificador 4 Bits

module Decodificador4Bits (A, B, C, D, convert);

	input A, B, C, D;
	output [6:0] convert;
	
	always @* begin
	
		case ({A, B, C, D})
			
			4'b0000: convert = 7'b1000000;
			4'b0001: convert = 7'b1001111;
			4'b0010: convert = 7'b0010010;
			4'b0011: convert = 7'b0000110;
			4'b0100: convert = 7'b1001100;
			4'b0101: convert = 7'b0100010;
			4'b0110: convert = 7'b0100000;
			4'b0111: convert = 7'b0001111;
			4'b1000: convert = 7'b0000000;
			4'b1001: convert = 7'b0000100;
			
			
		endcase
		
	end

endmodule 